{
    "name": "express_typescript_typeorm",
    "version": "1.0.0",
    "description": "Resolucion al problema propuesto por Santander Tecnologia",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "npm run clearDistDirectory",
        "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
        "prestart": "npm run build",
        "start": "node .",
        "dev": "nodemon",
        "clearDistDirectory": "rimraf dist",
        "migrate": "npm run typeorm migration:run",
        "syncDb": "npm run typeorm schema:sync",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix src/**/*.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/GrrAmd/challenge-santander.git"
    },
    "author": "Perez Alan",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "crypto-js": "^4.0.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validator": "^6.10.0",
        "faker": "^5.4.0",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "moment": "^2.29.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "mysql": "^2.18.1",
        "node-schedule": "^2.0.0",
        "nodemailer": "^6.5.0",
        "nodemon": "^2.0.7",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.2",
        "rimraf": "^3.0.2",
        "slugify": "^1.4.7",
        "ts-node": "^9.1.1",
        "typeorm": "^0.2.31",
        "typescript": "^4.2.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.10",
        "@types/crypto-js": "^4.0.1",
        "@types/express": "^4.17.11",
        "@types/faker": "^5.1.7",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.31",
        "@types/node-schedule": "^1.3.1",
        "@types/nodemailer": "^6.4.0",
        "@types/web-push": "^3.3.0",
        "@typescript-eslint/eslint-plugin": "4.28.2",
        "@typescript-eslint/parser": "4.28.2",
        "alias-hq": "^5.1.6",
        "eslint": "7.30.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "7.0.1",
        "lint-staged": "11.0.0",
        "prettier": "^2.3.2",
        "tsconfig-paths": "^3.9.0",
        "tscpaths": "^0.0.9"
    },
    "_moduleAliases": {
        "@config": "dist/config",
        "@controllers": "dist/controllers",
        "@enums": "dist/enums",
        "@interfaces": "dist/interfaces",
        "@middlewares": "dist/middlewares",
        "@migrations": "dist/migrations",
        "@entities": "dist/entities",
        "@respositories": "dist/respositories",
        "@routes": "dist/routes",
        "@services": "dist/services",
        "@subscribers": "dist/subscribers",
        "@utils": "dist/utils"
    },
    "alias-hq": {
        "prefix": "cfg"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint:fix"
        }
    }
}
